{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": ["standard"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "semi": ["error", "always"],
      "semi-spacing": ["error", { "after": true, "before": false }],
      "semi-style": ["error", "last"],
      "no-extra-semi": "error",
      "no-unexpected-multiline": "error",
      "no-unreachable": "error",
      "quotes": [2, "double"],
      "comma-dangle": ["error", "always-multiline"],
      "space-before-function-paren": ["error", "always"]
    }
  }